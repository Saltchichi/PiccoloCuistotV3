// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Ingredients {
  ingredientId Int     @id @default(autoincrement())
  quantity     Int
  unite        String?
  name         String
  Recipe       Recipe  @relation(fields: [ingredientId], references: [id])
}

model Instructions {
  instructionId Int    @id @default(autoincrement())
  step          Int
  text          String
  Recipe        Recipe @relation(fields: [instructionId], references: [id])
}

model Recipe {
  id               Int            @id @default(autoincrement())
  name             String
  imgUrl           String
  time             Int
  difficulty       Int
  difficultyName   String
  category         String
  forHowManyPeople Int
  ingredients      Ingredients[]
  instructions     Instructions[]
}
